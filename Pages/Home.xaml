<Page x:Class="Esoft.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Esoft.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Grid Background="red">
        <Image Source="/Resurs/logo.png" />

        <StackPanel Grid.Row="0" Background="White" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnBack"
             Width="150" Height="30" FontSize="17"
             Foreground="White" Background="Blue"
             Margin="350 0 0 0 " FontFamily="Tahoma" Content="Менеджеры" />
            <Button x:Name="btnFaq"
                Width="150" Height="30" FontSize="17"
                Foreground="White" Background="Blue"
                Margin="5 0 0 0 " FontFamily="Tahoma" Content="" />
            <Button x:Name="Dad1"
                Width="150" Height="30" FontSize="17"
                Foreground="White" Background="Blue"
                Margin="5 0 0 0 " FontFamily="Tahoma" Content="Назад" />
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
        </StackPanel>
        <StackPanel>
            <Image Source="/Resurs/logo.png" Width="300"/>
        </StackPanel>

    </Grid>
</Page>
